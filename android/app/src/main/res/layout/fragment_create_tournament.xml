<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paddingSize"
    tools:context="com.tourneynizer.tourneynizer.fragments.CreateTournamentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/largeTextSize"
            android:layout_marginTop="@dimen/marginSize"
            android:text="@string/createTournament" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tournamentName"
            android:layout_marginTop="@dimen/marginSize"
            android:textSize="@dimen/mediumTextSize"
            android:labelFor="@id/tournamentName"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tournamentName"
            android:textSize="@dimen/mediumTextSize"
            android:inputType="text"
            android:lines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:labelFor="@id/tournamentDescription"
            android:textSize="@dimen/mediumTextSize"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tournamentDescription"
            android:textSize="@dimen/mediumTextSize"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectTournamentType"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginSize"
            android:id="@+id/tournamentTypeSpinner"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/locationPrompt"
                android:layout_centerInParent="true"
                android:text="@string/locationPrompt"
                android:textSize="@dimen/mediumTextSize"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/locationPrompt"
                android:layout_toStartOf="@id/goToMap"
                android:id="@+id/locationText"
                android:layout_centerInParent="true"
                android:textAlignment="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chooseLocation"
                android:layout_alignParentEnd="true"
                android:id="@+id/goToMap" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/datePrompt"
                android:id="@+id/datePrompt"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/mediumTextSize"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_toEndOf="@id/datePrompt"
                android:layout_toStartOf="@id/showDatePicker"
                android:layout_centerInParent="true"
                android:id="@+id/startDate"
                android:textSize="@dimen/mediumTextSize"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/showDatePicker"
                android:text="@string/chooseDate"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timePrompt"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:textSize="@dimen/mediumTextSize"
                android:text="@string/timePrompt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/timePrompt"
                android:layout_toStartOf="@id/showTimePicker"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:id="@+id/startTime"
                android:textSize="@dimen/mediumTextSize"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/showTimePicker"
                android:text="@string/chooseTime"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/teamSize"
                    android:textSize="@dimen/mediumTextSize"
                    android:labelFor="@id/teamSize"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teamSize"
                    android:inputType="number"
                    android:textSize="@dimen/mediumTextSize"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maxTeams"
                    android:textSize="@dimen/mediumTextSize"
                    android:labelFor="@id/maxTeams"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/maxTeams"
                    android:inputType="number"
                    android:textSize="@dimen/mediumTextSize"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/createButton"
            android:layout_margin="@dimen/marginSize"
            android:text="@string/createTournament"/>

    </LinearLayout>

</ScrollView>
